<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<display-name>Expo</display-name>
	<description>
  This is Expo Calendar web app
	</description>
  
	<welcome-file-list>  
      <welcome-file>index.jsp</welcome-file>   
    </welcome-file-list>  
  
	<jsp-config>
	  <taglib>
	    <taglib-uri>/WEB-INF/lib/mytaglib.tld
		</taglib-uri>
		<taglib-location>/WEB-INF/lib/mytaglib.tld
		</taglib-location>
	  </taglib>
	</jsp-config>
		
	<!-- Error pages configuration -->
  <error-page>
    <error-code>404</error-code>
    <location>/error.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/error.jsp</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.RuntimeException</exception-type>
    <location>/error.jsp</location>
  </error-page>
	
  <listener>
        <listener-class>listener.Listener</listener-class>
    </listener>
	
	<servlet>
	  <servlet-name>Controller</servlet-name>
	  <servlet-class>servlet.Controller</servlet-class>
	</servlet>
	
	<servlet-mapping>
	  <servlet-name>Controller</servlet-name>
	  <url-pattern>/Controller</url-pattern>
	</servlet-mapping>
	
	<!-- data source configuration -->	
	<resource-ref>
	  <description>DB Connection</description>
	  <res-ref-name>dsExpo</res-ref-name>
	  <res-type>javax.sql.DataSource</res-type>
	  <res-auth>Container</res-auth>
	</resource-ref>
	
	<session-config>
    <session-timeout>1</session-timeout>
  </session-config>
</web-app>
